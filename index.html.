  <style>
    * {box-sizing: border-box; margin:0; padding:0; font-family: Inter, sans-serif;}
    body {background: radial-gradient(circle at top left,#0b1220,#04101a); color:#fff; height:100vh; display:flex; flex-direction:column; align-items:center; justify-content:center;}
    .loading {display:none; flex-direction:column; align-items:center;}
    .loading span {font-size:1.2em; margin-top:10px;}
    .spinner {width:40px;height:40px;border:4px solid rgba(255,255,255,.3);border-top:4px solid #00aaff;border-radius:50%;animation:spin 1s linear infinite;}
    @keyframes spin {0%{transform:rotate(0deg);}100%{transform:rotate(360deg);}}
    .login-card {background:#0b1e2f; border-radius:16px; padding:30px; box-shadow:0 0 20px rgba(0,0,0,.4); width:90%; max-width:340px;}
    h1 {text-align:center; margin-bottom:20px; color:#00aaff;}
    input {width:100%; padding:12px; margin:10px 0; border:none; border-radius:8px; font-size:1em;}
    input[type="text"], input[type="password"] {background:#132a3d; color:#fff;}
    button {width:100%; padding:12px; background:#00aaff; color:#fff; border:none; border-radius:8px; font-weight:bold; font-size:1em; cursor:pointer;}
